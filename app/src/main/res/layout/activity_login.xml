<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:contentDescription="@string/balina"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_alignStart="@+id/emailAutoComplete"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="221dp"
        android:text="@string/e_mail"
        android:textAppearance="@style/TextAppearance"
        android:textSize="14sp"
        android:textStyle="italic" />

    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:id="@+id/emailAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="20dp"
        android:gravity="top"
        android:hint="@string/emailHint"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/passTitle"
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:layout_below="@+id/emailAutoComplete"
        android:layout_alignStart="@+id/emailTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="13dp"
        android:text="@string/pass"
        android:textAppearance="@style/TextAppearance"
        android:textSize="14sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/passEnter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="20dp"
        android:gravity="top"
        android:hint="@string/passHint"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="15"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance"
        android:textSize="14sp"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/showPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/passEnter"
        android:layout_alignEnd="@+id/passEnter"
        android:layout_alignBottom="@+id/passEnter"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        android:button="@drawable/check_box"
        android:checked="false"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/logIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="379dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"
        android:text="@string/signUp"
        android:textAppearance="@style/TextAppearance"
        android:textSize="16sp"
        android:textStyle="normal" />

</RelativeLayout>